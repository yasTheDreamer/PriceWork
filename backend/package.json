{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node functions/dist-server/bin/www.js",
    "dev": "npm run transpile & npm run start",
    "transpile": "babel ./server --out-dir functions/dist-server --source-maps",
    "firebase": "npm run transpile & firebase deploy",
    "localfirebase": "npm run transpile & firebase serve --only functions",
    "watch:localfirebase": "nodemon"
  },
  
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "sourceMaps": true,
    "retainLines": true
  },
  "nodemonConfig": {
    "exec": "npm run localfirebase",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "connect-redis": "^5.0.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "express-session": "^1.17.1",
    "http-errors": "~1.6.3",
    "mongoose": "^5.11.8",
    "morgan": "~1.9.1",
    "node-babel": "^0.1.2",
    "nodemon": "^2.0.6",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "@babel/node": "^7.12.10",
    "@babel/register": "^7.12.10",
    "firebase": "^8.2.1",
    "firebase-admin": "^9.4.2",
    "firebase-functions": "^3.13.0"
  }
}
